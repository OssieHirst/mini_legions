<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>">
    following<strong id="following" class="stat">
      <%= @user.followed_users.count %>
    </strong>
  </a>
  <a href="<%= followers_user_path(@user) %>">
    followers<strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
  </a>
  <a href="<%= user_collections_path(@user) %>">collection<strong id="collection" class="stat">
      <%= @user.collections.where(status: 'Got').count %>
    </strong></a>
    <a href="<%= collections_path(@user) %>">wantlist<strong id="collection" class="stat">
      <%= @user.collections.where(status: 'Want').count %>
    </strong></a>
</div>