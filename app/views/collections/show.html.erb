<% provide(:title, [@miniature.name, @user.name].join(' by ')) %>

<div class="row">

  <div class="span8">
      <h3><%= @collection.miniature.name %> </h3>
      <% if @collection.photo.exists? %>

      <%= link_to image_tag(@collection.photo.url(:medium), :retina => true), @collection.photo.url(:original), :retina => true %><br />
      <i><%= @collection.name %></i> Painted by <%= link_to @collection.user.name, @user %>
      <% end %><br /><br />

        <%= @collection.notes %>



    </div>
  <aside class="span4">
    <section>


     <% if current_user?(@user) %>
     
     <%= render 'got' %>
     
      <% else %>
      In <%= link_to @collection.user.name, @user %>'s collection<br /><br />
      Progress: <%= @collection.progress %>
     <% end %><br /><br />
     <%= link_to 'See full Miniature details', @miniature %><br />
     <%= link_to 'See user collection', user_collections_path(@user, :status => "Got") %>
    </section>
  </aside>
   
</div>