<% provide(:title, [@miniature.name, @user.name].join(' by ')) %>

<div class="row">

  <div class="span8">
      <h3><%= @collection.miniature.name %> </h3>
      <% if @collection.photo.exists? %>

<script type="text/javascript">
$(document).ready(function() {
  $('.image-popup-no-margins').magnificPopup({
    type: 'image',
    closeOnContentClick: true,
    closeBtnInside: false,
    fixedContentPos: true,
    mainClass: 'mfp-no-margins mfp-with-zoom', // class to remove default margin from left and right side
    image: {
      verticalFit: true
    },
    zoom: {
      enabled: true,
      duration: 200 // don't foget to change the duration also in CSS
    }
  });
});
</script>

      <%= link_to image_tag(@collection.photo.url(:medium), :retina => true), @collection.photo.url(:original), :retina => true, :class => "image-popup-no-margins" %><br />
      <i><%= @collection.name %></i> Painted by <%= link_to @collection.user.name, @user %>
      <% end %><br /><br />

        <%= @collection.notes %>



    </div>
  <aside class="span4">
    <section>


     <% if current_user?(@user) %>
     
     <%= render 'listed' %>
     
      <% else %>
      In <%= link_to @collection.user.name, @user %>'s collection<br /><br />
      Progress: <%= @collection.progress %>
     <% end %><br /><br />
     <%= link_to 'See full Miniature details', @miniature %><br />
     <%= link_to 'See user collection', user_collections_path(@user, :status => "Got") %><br /><br />

     <%= link_to raw("<i class='fa fa-times'></i> Remove from collection"), @collection, :confirm => 'Are you sure you want to remove this? Photos and notes will be lost and it cannot be undone!', method: :delete , class: "btn btn-med btn-primary" %>

    </section>
  </aside>
   
</div>