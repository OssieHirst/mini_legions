<%= form_for @collection do |f| %>
    <%= f.label :status %>
    <%= f.select :status, options_for_select(["Got", "Want", "Had"], :selected => @collection.status) %>
    <%= f.label :progress %>
    <%= f.select :progress, options_for_select(["Unpainted", "Painted", "Assembled", "Unassambled", "Work In progress", "N/A"], :selected => @collection.progress) %>
    <%= f.label :conversion %>
              <%= f.check_box :conversion %><span class="tooltip_style"><a href="#" data-toggle="tooltip" title="Tick if you've converted the miniature using parts not supplied with it. You can detail your conversion in the notes."> <i class="fa fa-question-circle"></i></a></span><br /><br />
    <%= f.label :name, 'Name or number' %>
  <%= f.text_field :name %>
  <%= f.label :notes, 'Notes' %>
  <%= f.text_area :notes %>
     	<%= f.submit "Update", class: "btn btn-med btn-primary" %>
     <% end %><br />
