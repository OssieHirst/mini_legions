<tr>
  <td>
  <% if collection.photo.exists? %><%= link_to image_tag(collection.photo.url(:icon), :retina => true, :class => "curvedicon"), collection %><% else %><%= link_to image_tag("https://s3.amazonaws.com/minilegions/system/stock/barbarian.gif", :retina => true, :class => "curvedicon"), collection %><% end %></td>
  <td><%= link_to collection.miniature.name.truncate(40, omission: "...#{collection.miniature.name.last(2)}"), collection %><%= " (#{collection.miniature.quantity})" if collection.miniature.set? %></td>
   <td><%= collection.name %></td>
   <td><% collection.miniature.manufacturers.each do |manufacturer| %>
        <%= link_to manufacturer.name, manufacturer_path(manufacturer) %>
          <% end %></td>
  <td><%= collection.progress %></td>
  <td><%= time_ago_in_words(collection.created_at) %> ago</td>
  <% if params[:status] == 'Want' %>
    <td><%= link_to ' <i class="fa fa-times"></i>'.html_safe, collection, :confirm => 'Are you sure you want to remove this item from your wantlist?', :method => :delete %></td>
  <% end %>
  
  </td></tr>