<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      @<%= @user.username %>
        <div class="adminlevel">
          <% if @user.superadmin? %>
            Dark Lord
          <% elsif @user.admin? %>
            Admin
          <% elsif @user.contributor? %>
            Contributor
          <% end %>
        </div>
    </section>
    <section>
      
      <%= render 'shared/stats' %>

    </section>
  </aside>
  <div class="span4">
  </div>
  <div class="span5">
    <%= render 'follow_form' if signed_in? %>
    <% if @user.microposts.any? %>
      <h3>Updates (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>