<% provide(:title, @line.name) %>
<h1><%= @line.name %></h1>
<div id="breadcrumbs">
  <%= link_to @line.manufacturer.name, @line.manufacturer %> &gt;
  <% @line.ancestors.each do |line| %> 
    <%= link_to line.name, line %> &gt;
  <% end %> <%= @line.name %>
</div>
<div class="row">
  <div class="span4">
<br /><br />
<% @line.children.each do |line| %>
<%= link_to line.name, line %>
<br />
<% end %>
<br /><br />
Depth = <%= @line.depth %><br />
  Live? <%= @line.live? %><br />
  <%= @line.originator %>
  
</div>
<div class="span8">
	<%= @line.description %><br /><br />

	<h4>Miniatures</h4>
	
	 <% @line.miniatures.each do |miniature| %>
        <%= link_to miniature.name, miniature %><br />
    <% end %>
</div>
</div>
