<h1>Listing lines</h1>

<table border="0" cellpadding="10" class="table table-condensed table-hover">
  <tr>
    <th>Name</th>
    <th>Manufacturer</th>
    <th>Description</th>
    <th>Ancestry</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lines.each do |line| %>
  <tr>
    <td><%= line.name %></td>
    <td><%= line.manufacturer.name %></td>
    <td><%= line.description %></td>
    <td><%= line.ancestry %></td>
    <td><%= link_to 'Show', line %></td>
    <td><%= link_to 'Edit', edit_line_path(line) %></td>
    <td><% if current_user.try(:admin?) %><%= link_to 'Destroy', line, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
  </tr>
<% end %>
</table>

