	<% if @miniature.imagevotes.where(:voter_id => current_user).any? %>
	<br>
      Voted the best painted examples of <%= @miniature.name %>. 
      <span class="vote_button"><%= link_to "Change your vote", edit_imagevote_path(:miniature_id => @miniature, :voter_id => current_user.id), class: "btn btn-primary" %></span>
      <br>
      <% else %>
      <br>
      Voted the best painted examples of <%= @miniature.name %>. 
      <span class="vote_button"><%= link_to "Cast your vote", new_imagevote_path(:miniature_id => @miniature), class: "btn btn-primary" %></span>
      <br>
      <% end %>