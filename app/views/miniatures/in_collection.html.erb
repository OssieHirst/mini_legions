<% provide(:title, [@miniature.name, 'Got and Want'].join(' ')) %>

<h1><%= @miniature.name %></h1>

<div class="row">
  <div class="span6">
  	<table border="0" cellpadding="10" class="table table-hover"><th><%= @miniature.collections.where(status: 'Got').count(:user_id, distinct: true) %> users have this</th>
  		<th></th>
  		<%= render 'got' %>
  	</table>
  </div>
  <div class="span6">
  	<table border="0" cellpadding="10" class="table table-hover"><th>
  		<%= @miniature.collections.where(status: 'Want').count(:user_id, distinct: true) %> users want this</th>
  		<th></th>
  		<%= render 'want' %>
  </table>
  </div>

</div>