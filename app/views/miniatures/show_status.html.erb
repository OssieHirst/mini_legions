<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @miniature.name %></h1>
      <span><%= link_to "view miniature listing", @miniature %></span>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @collections.any? %>
      <ul class="users">
        <%= render @collections %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>