<% provide(:title, 'Add miniature') %>
<h1>Add a miniature</h1>
<div class="row">
  <div class="span8 offset2">
    	<%= form_for(@miniature, :html => { :class => "form-horizontal"} ) do |f| %>
        	<%= render 'fields', f: f %>
    		<div style="float: right;">
    			<%= f.submit "Add miniature", class: "btn btn-primary" %>
    		</div>
    	<% end %>
  </div>
</div>

