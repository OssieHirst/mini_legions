<% provide(:title, 'Edit sculptor') %>

<ul class="nav nav-tabs" id="myTab">
  <li class="active"><a href="#edit">Edit product line</a></li>
  <li><a href="#changes">Sculptor changes</a></li>
</ul>

<div class="tab-content">
	<div class="tab-pane active" id="edit">
<h1>Edit sculptor</h1>

<div class="row">
	<div class="span8 offset2">
		<%= form_for(@sculptor, :html => { :class => "form-horizontal"} ) do |f| %>
			<%= render 'form', f: f %>
			<%= render 'shared/comment', f: f %>
		<div style="float: right;">
   		 <%= f.submit "Submit changes", class: "btn btn-primary" %>
  		</div>
		<% end %>

	</div>
</div>
</div>
<div class="tab-pane" id="changes"><%= render 'history' if @sculptor.versions.any? %>
</div>
</div>

<script>
  $('#myTab a').click(function (e) {
  e.preventDefault();
  $(this).tab('show');
})
</script>



